<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/pop_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip">

        <LinearLayout
            android:id="@+id/ll_wechat"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/logo_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wechat"
                android:textSize="@dimen/font_size_sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechatmoments"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wecharmoments"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/logo_wechatmoments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wecharmoments"
                android:textSize="@dimen/font_size_sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qzone"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qzone"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/logo_qzone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qzone"
                android:textSize="@dimen/font_size_sp_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sinaweibo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_sinaweibo"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/logo_sinaweibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sina_weibo"
                android:textSize="@dimen/font_size_sp_10"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:text="@string/cancel"/>

    <LinearLayout
        android:id="@+id/ll_get_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dip"
                android:src="@drawable/img_get_money"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/get_moeny"
                android:textColor="@color/global_red"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>