<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chunsun.redenvelope.ui.activity.personal.UpdatePasswordActivity">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:id="@+id/ll_old_pwd_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="#c8c7cd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/old_pwd"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_sp_16" />

            <EditText
                android:id="@+id/et_input_old_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:hint="@string/input_old_pwd"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textColorHint="@color/font_hint_gray"
                android:textSize="@dimen/font_size_sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c7cd" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#c8c7cd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/new_pwd"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_sp_16" />

        <EditText
            android:id="@+id/et_input_new_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:hint="@string/input_new_pwd"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="@color/font_hint_gray"
            android:textSize="@dimen/font_size_sp_16" />
    </LinearLayout>

    <include layout="@layout/layout_gray_half_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/confirm_new_pwd"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_sp_16" />

        <EditText
            android:id="@+id/et_confirm_new_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/transparency"
            android:hint="@string/input_new_pwd_again"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/black"
            android:textColorHint="@color/font_hint_gray"
            android:textSize="@dimen/font_size_sp_16" />
    </LinearLayout>

    <include layout="@layout/layout_gray_half_line" />

</LinearLayout>
