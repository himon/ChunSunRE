<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_nav"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tools_bar_height"
    android:background="@color/global_red"
    android:padding="7dp">

    <ImageView
        android:id="@+id/iv_nav_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/img_place"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_nav_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_nav_icon"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_nav_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_sp_20" />

    <TextView
        android:id="@+id/tv_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ib_nav_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_circle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/img_search_bar_icon_order"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="47dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="最新" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="@dimen/tools_bar_height"
            android:layout_height="@dimen/tools_bar_height">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_search_bar_icon_search" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_create"
            android:layout_width="@dimen/tools_bar_height"
            android:layout_height="@dimen/tools_bar_height">

            <ImageView
                android:id="@+id/iv_create"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_search_bar_icon_create" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
