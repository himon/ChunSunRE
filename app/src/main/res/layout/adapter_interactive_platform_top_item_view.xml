<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape_rect_light_yellow"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="7dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/tv_system_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/notice_board"
            android:textColor="#fe6700"
            android:textSize="@dimen/font_size_sp_16" />

        <TextView
            android:id="@+id/tv_system_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#2d9bfa"
            android:textSize="@dimen/font_size_sp_16" />

        <TextView
            android:id="@+id/tv_system_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            android:textColor="#c8c8c8"
            android:textSize="@dimen/font_size_sp_14" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_record_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_comment_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_red_detail_radio_button_background"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/nationwide"
            android:textColor="@drawable/selector_red_detail_radio_button_text"
            android:textSize="@dimen/font_size_sp_16" />

        <RadioButton
            android:id="@+id/rb_comment_local"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_red_detail_radio_button_background"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@drawable/selector_red_detail_radio_button_text"
            android:textSize="@dimen/font_size_sp_16" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ff5412" />

</LinearLayout>