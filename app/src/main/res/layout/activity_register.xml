<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chunsun.redenvelope.ui.activity.account.RegisterActivity">

    <include layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="@string/personal_account" />

                <View
                    android:id="@+id/view_personal"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@color/global_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_enterprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="@string/company_account" />

                <View
                    android:id="@+id/view_enterprise"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/global_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c7cd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phonenum"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_sp_16" />

            <EditText
                android:id="@+id/et_input_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/input_phonenum"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@android:color/black"
                android:textColorHint="@color/font_hint_gray"
                android:textSize="@dimen/font_size_sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dip"
            android:background="#c8c7cd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validate_code"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_sp_16" />

            <EditText
                android:id="@+id/et_input_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/input_validate_code"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textColorHint="@color/font_hint_gray"
                android:textSize="@dimen/font_size_sp_16" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="#c8c7cd" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/get_validate_code"
                android:textColor="@color/font_hint_gray"
                android:textSize="@dimen/font_size_sp_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dip"
            android:background="#c8c7cd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_code"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_sp_16" />

            <EditText
                android:id="@+id/et_input_invite_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="@string/optional"
                android:maxLength="11"
                android:textColor="@android:color/black"
                android:textColorHint="@color/font_hint_gray"
                android:textSize="@dimen/font_size_sp_16" />
        </LinearLayout>

        <include layout="@layout/layout_gray_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree_service_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox_login"
            android:checked="true"
            android:gravity="left|center_vertical"
            android:linksClickable="false"
            android:paddingLeft="20dp"
            android:text="@string/read_and_agree"
            android:textColor="#8e8e93"
            android:textSize="@dimen/font_size_sp_14" />

        <TextView
            android:id="@+id/tv_service_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/agreement"
            android:textColor="#007aff"
            android:textSize="@dimen/font_size_sp_14" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_red_radius"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_sp_18" />

</LinearLayout>
