<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chunsun.redenvelope.ui.activity.ad.CreateLuckNextActivity">

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_radius_white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_read_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_gray7" />

                    <TextView
                        android:id="@+id/tv_repeat_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/font_gray7" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/img_create_luck_add" />

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <com.chunsun.redenvelope.widget.XCArcProgressBar
                        android:id="@+id/arcProgressBar"
                        android_custom:textColor="@color/font_gray6"
                        android_custom:textIsDisplayable="true"
                        android_custom:textSize="@dimen/font_size_sp_10"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true">

                    </com.chunsun.redenvelope.widget.XCArcProgressBar>

                    <LinearLayout
                        android:id="@+id/ll_read_nums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="约 "
                            android:textColor="@color/font_gray7"
                            android:textSize="@dimen/font_size_sp_10" />

                        <TextView
                            android:id="@+id/tv_read_nums"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/global_red"
                            android:textSize="@dimen/font_size_sp_16"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 次"
                            android:textColor="@color/font_gray7"
                            android:textSize="@dimen/font_size_sp_10" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_read_nums"
                        android:layout_centerHorizontal="true"
                        android:text="潜在阅读"
                        android:textColor="@color/font_gray7"
                        android:textSize="@dimen/font_size_sp_10" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/global_red" />

            <RadioGroup
                android:id="@+id/rg_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_first"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_ad_radio_button_bg"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:textColor="@color/selector_radio_button_text_red_white" />

                <RadioButton
                    android:id="@+id/rb_second"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_ad_radio_button_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/selector_radio_button_text_red_white" />

                <RadioButton
                    android:id="@+id/rb_third"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_ad_radio_button_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/selector_radio_button_text_red_white" />

                <RadioButton
                    android:id="@+id/rb_forth"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_ad_radio_button_bg"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/selector_radio_button_text_red_white" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="购买套餐倍数"
                        android:textSize="@dimen/font_size_sp_16" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:text="*"
                        android:textSize="@dimen/font_size_sp_18" />

                    <TextView
                        android:id="@+id/tv_subtraction"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:background="@drawable/shape_radius_gray_bg"
                        android:gravity="center"
                        android:text="——"
                        android:textSize="@dimen/font_size_sp_18" />

                    <TextView
                        android:id="@+id/tv_multiple"
                        android:layout_width="50dp"
                        android:layout_height="26dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:numeric="decimal"
                        android:singleLine="true"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:background="@drawable/shape_radius_gray_bg"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="@dimen/font_size_sp_18" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/global_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="广告总价" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/global_red"
                        android:textSize="@dimen/font_size_sp_22" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元" />
                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="审核通过后立刻发放"
                    android:textSize="@dimen/font_size_sp_14" />

                <RadioButton
                    android:id="@+id/rb_at_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时定量发放"
                    android:textSize="@dimen/font_size_sp_14" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_at_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_radius_white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="定      时：" />

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@drawable/shape_radius_stroke_red"
                        android:gravity="center"
                        android:text="12" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="：" />

                    <TextView
                        android:id="@+id/tv_minutes"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/shape_radius_stroke_red"
                        android:gravity="center"
                        android:text="30" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（30分钟后）"
                        android:textColor="@color/font_gray8" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/global_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="每天数量：" />

                    <EditText
                        android:id="@+id/et_nums"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/shape_radius_stroke_red"
                        android:gravity="center"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（总数量/天数）"
                        android:textColor="@color/font_gray8" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/global_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="发放天数：" />

                    <TextView
                        android:id="@+id/tv_days"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/font_gray8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"
                        android:textColor="@color/font_gray8" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_button_red_radius"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_sp_18" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
