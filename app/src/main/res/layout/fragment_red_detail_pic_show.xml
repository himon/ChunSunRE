<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.chunsun.redenvelope.ui.fragment.RedDetailPicPreviewFragment">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_detail_gralley_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:text="@string/exit"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_detail_gralley_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_download_pic"
            android:layout_width="0dip"
            android:layout_height="20dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/save_pic"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_scanf"
            android:layout_width="0dip"
            android:layout_height="20dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/scan_two_dimension_code"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
