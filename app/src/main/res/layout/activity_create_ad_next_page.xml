<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/img_create_ad_bg"
              android:orientation="vertical"
              tools:context="com.chunsun.redenvelope.ui.activity.ad.CreateAdContentActivity">

    <include layout="@layout/layout_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="选择套餐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_sp_16"/>

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_red_detail_edit_text"
                    android:hint="@string/ad_title"
                    android:maxLength="30"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint_gray"
                    android:textSize="@dimen/font_size_sp_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="广告封面图片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_sp_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_radius_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <ImageView
                        android:id="@+id/iv_add_title_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/img_add_title_img"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_content_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="广告内容图片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_sp_16"/>

                <LinearLayout
                    android:id="@+id/ll_image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_radius_white"
                    android:orientation="horizontal"
                    android:padding="7dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="广告内容"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_sp_16"/>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_red_detail_edit_text"
                    android:gravity="top"
                    android:hint="@string/ad_content"
                    android:maxLength="2000"
                    android:maxLines="6"
                    android:minLines="6"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/font_hint_gray"
                    android:textSize="@dimen/font_size_sp_16"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_button_red_radius"
                android:gravity="center"
                android:text="@string/commit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_sp_18"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
