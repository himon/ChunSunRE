<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/tv_red_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_size_sp_16" />

        <TextView
            android:id="@+id/tv_red_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_red_title"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="@color/font_gray2"
            android:textSize="@dimen/font_size_sp_12" />

        <TextView
            android:id="@+id/tv_red_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_red_title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/font_gray2"
            android:textSize="@dimen/font_size_sp_14" />

        <TextView
            android:id="@+id/tv_red_status"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_red_time"
            android:textColor="@color/global_red"
            android:textSize="@dimen/font_size_sp_14" />
    </RelativeLayout>
</RelativeLayout>