<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context="com.chunsun.redenvelope.ui.activity.WebRedDetailActivity">

    <include layout="@layout/layout_title_bar" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/view_nav_bar"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/lay_common_webview_load_error"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载失败，点击重试"
            android:textColor="@color/font_hint_gray"
            android:textSize="@dimen/font_size_sp_18" />

        <Button
            android:id="@+id/btn_common_webview_load_error"
            android:layout_width="108dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/selector_button_webview_reload" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_get_red"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/global_red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ll_content"
            android:src="@drawable/img_icon_gold" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看完领钱"
                android:textColor="@color/font_yellow" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/font_yellow"
                android:textSize="@dimen/font_size_sp_20"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="元"
                android:textColor="@color/font_yellow"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
