<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- dialog样式 -->
    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 图片选择Activity样式 -->
    <style name="myTheme.actionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <!-- 设置toolbar的menu字体的大小 -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/myTheme.actionBar</item>
        <item name="colorPrimary">@color/global_red</item>
        <item name="actionBarSize">@dimen/tools_bar_height</item>
    </style>

</resources>
